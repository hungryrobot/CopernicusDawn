{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-multicolumn-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding }}px 0;
  }

  .ai-multicolumn-container-{{ ai_gen_id }} {
    display: grid;
    gap: {{ block.settings.column_gap }}px;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-multicolumn-container-{{ ai_gen_id }}--desktop-{{ block.settings.columns_desktop }} {
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
  }

  .ai-multicolumn-column-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-multicolumn-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: {{ block.settings.image_width }}%;
    max-width: {{ block.settings.image_max_width }}px;
    aspect-ratio: 1;
    margin: 0 auto {{ block.settings.content_spacing }}px;
    overflow: hidden;
    border-radius: {{ block.settings.image_border_radius }}px;}

  .ai-multicolumn-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-multicolumn-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-multicolumn-image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-multicolumn-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 10px;
    left: 50%;
    transform: translateX(-50%);
    font-size: 12px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-multicolumn-headline-{{ ai_gen_id }} {
    font-size: {{ block.settings.headline_size }}px;
    font-weight: 600;
    color: {{ block.settings.headline_color }};
    margin: 0 0 {{ block.settings.content_spacing }}px;
    line-height: 1.3;
  }

  .ai-multicolumn-body-{{ ai_gen_id }} {
    font-size: {{ block.settings.body_size }}px;
    color: {{ block.settings.body_color }};
    margin: 0 0 {{ block.settings.content_spacing }}px;
    line-height: 1.5;
  }

  .ai-multicolumn-button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: {{ block.settings.button_padding }}px {{ block.settings.button_padding | times: 1.5 }}px;
    background-color: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_text_size }}px;
    font-weight: 500;
    transition: background-color 0.3s ease;
    border: {{ block.settings.button_border_width }}px solid {{ block.settings.button_border_color }};margin-top: auto;
  }

  .ai-multicolumn-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background }};
    color: {{ block.settings.button_hover_text_color }};
  }

  .ai-multicolumn-button-{{ ai_gen_id }}:focus {
    outline: 2px solid {{ block.settings.button_background }};
    outline-offset: 2px;
  }

  @media screen and (max-width: 749px) {
    .ai-multicolumn-container-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
      gap: {{ block.settings.column_gap | times: 0.75 }}px;
    }

    .ai-multicolumn-{{ ai_gen_id }} {
      padding: {{ block.settings.section_padding | times: 0.75 }}px 0;
    }

    .ai-multicolumn-image-wrapper-{{ ai_gen_id }} {
      width: {{ block.settings.image_width_mobile }}%;
      max-width: {{ block.settings.image_max_width | times: 0.8 }}px;
    }
  }
{% endstyle %}<div class="ai-multicolumn-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-multicolumn-container-{{ ai_gen_id }} ai-multicolumn-container-{{ ai_gen_id }}--desktop-{{ block.settings.columns_desktop }}">
    {% assign columns_desktop_num = block.settings.columns_desktop | plus: 0 %}
    {% for i in (1..4) %}
      {% if i <= columns_desktop_num %}
        {% liquid
          assign image_key = 'column_' | append: i | append: '_image'
          assign show_image_key = 'column_' | append: i | append: '_show_image'
          assign headline_key = 'column_' | append: i | append: '_headline'
          assign body_key = 'column_' | append: i | append: '_body'
          assign button_text_key = 'column_' | append: i | append: '_button_text'
          assign button_link_key = 'column_' | append: i | append: '_button_link'

          assign column_image = block.settings[image_key]
          assign show_image = block.settings[show_image_key]
          assign column_headline = block.settings[headline_key]
          assign column_body = block.settings[body_key]
          assign column_button_text = block.settings[button_text_key]
          assign column_button_link = block.settings[button_link_key]
        %}

        <div class="ai-multicolumn-column-{{ ai_gen_id }}">
          {% if show_image %}
            <div class="ai-multicolumn-image-wrapper-{{ ai_gen_id }}">
              {% if column_image %}
                <img
                  src="{{ column_image | image_url: width: 500}}"
                  alt="{{ column_image.alt | escape }}"
                  class="ai-multicolumn-image-{{ ai_gen_id }}"loading="lazy"
                  width="500"
                  height="500"
                >
              {% else %}
                <div class="ai-multicolumn-image-placeholder-{{ ai_gen_id }}">
                  {{ 'image' | placeholder_svg_tag }}<div class="ai-multicolumn-empty-state-{{ ai_gen_id }}">
                    Add image for column {{ i }}
                  </div>
                </div>
              {% endif %}
            </div>
          {% endif %}

          {% if column_headline != blank %}
            <h3 class="ai-multicolumn-headline-{{ ai_gen_id }}">{{ column_headline }}</h3>
          {% endif %}

          {% if column_body != blank %}
            <div class="ai-multicolumn-body-{{ ai_gen_id }}">{{ column_body }}</div>
          {% endif %}

          {% if column_button_text != blank %}
            <a
              href="{{ column_button_link | default: '#' }}"
              class="ai-multicolumn-button-{{ ai_gen_id }}"
            >
              {{ column_button_text }}
            </a>
          {% endif %}
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>

