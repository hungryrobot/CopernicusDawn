ption>NU</option>\n    <option>ON</option><option>PE</option><option>QC</option><option>SK</option>\n    <option>YT</option>\n  </select>\n  <button type=\"button\" class=\"button button--secondary\" id=\"RepClear\">Show all</button>\n</div>\n\n<div id=\"RepResults\" class=\"rep-grid\">\n  <!-- SAMPLE REPS — duplicate and edit coverage/name/contacts -->\n  <div class=\"rep-card\" data-coverage=\"CA, NV, OR, WA\">\n    <h3>Pacific Reps</h3>\n    <div class=\"rep-card__meta\"><strong>Territory:</strong> CA, NV, OR, WA</div>\n    <div>Email: <a href=\"mailto:pacific@example.com\">pacific@example.com</a></div>\n    <div>Phone: <a href=\"tel:+15551001000\">(555) 100-1000</a></div>\n    <div class=\"rep-card__actions\">\n      <a class=\"button\" href=\"mailto:pacific@example.com\">Email</a>\n      <a class=\"button button--secondary\" href=\"tel:+15551001000\">Call</a>\n    </div>\n  </div>\n\n  <div class=\"rep-card\" data-coverage=\"NY, NJ, CT, MA, RI, NH, VT, ME\">\n    <h3>Northeast Group</h3>\n    <div class=\"rep-card__meta\"><strong>Territory:</strong> NY, NJ, CT, MA, RI, NH, VT, ME</div>\n    <div>Email: <a href=\"mailto:ne@example.com\">ne@example.com</a></div>\n    <div>Phone: <a href=\"tel:+15552002000\">(555) 200-2000</a></div>\n    <div class=\"rep-card__actions\">\n      <a class=\"button\" href=\"mailto:ne@example.com\">Email</a>\n      <a class=\"button button--secondary\" href=\"tel:+15552002000\">Call</a>\n    </div>\n  </div>\n\n  <div class=\"rep-card\" data-coverage=\"TX, OK, AR, LA\">\n    <h3>Southern Reps</h3>\n    <div class=\"rep-card__meta\"><strong>Territory:</strong> TX, OK, AR, LA</div>\n    <div>Email: <a href=\"mailto:south@example.com\">south@example.com</a></div>\n    <div>Phone: <a href=\"tel:+15553003000\">(555) 300-3000</a></div>\n    <div class=\"rep-card__actions\">\n      <a class=\"button\" href=\"mailto:south@example.com\">Email</a>\n      <a class=\"button button--secondary\" href=\"tel:+15553003000\">Call</a>\n    </div>\n  </div>\n</div>\n\n<script>\n(function(){\n  var sel=document.getElementById('RepSelect');\n  var clear=document.getElementById('RepClear');\n  var results=document.getElementById('RepResults');\n  function filter(){\n    var val=(sel.value||'').toLowerCase();\n    results.querySelectorAll('.rep-card').forEach(function(card){\n      var cov=(card.getAttribute('data-coverage')||'').toLowerCase();\n      var show=(val==='__all__'||val===''||cov.indexOf(val)>-1);\n      card.style.display=show?'':'none';\n    });\n  }\n  sel.addEventListener('change',filter);\n  clear.addEventListener('click',function(){sel.value='__all__';filter();});\n  filter();\n})();\n</script>",
